<div class="container">
  <h2><%= title %></h2>
  <%= content %>
  <table class="table table-striped">
    <thead>
      <tr>
        <% columns.each do |column| %>
          <th scope="col">
            <%= column.capitalize %>
          </th>
        <% end %>
        <th scope="col">
          Action
        </th>
      </tr>
    </thead>
    <tbody>
      <% items.each do |item| %>
        <tr>
          <% columns.each_with_index do |column, index| %>
            <th>
              <% if index == 0 %>
                <%= link_to item.send(column), item %>
              <% else %>
                  <%= item.send(column) %>
                <% end %>
            </th>
          <% end %>
          <th>
            <%= render Button::LinkComponent.new("Edit", edit_polymorphic_path(item)) %>
          </th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
